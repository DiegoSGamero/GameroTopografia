<div class="text-center m-4">
  <h2 style="color: #1c301e;">Mude sua senha</h2>
</div>

<div class="text-center">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field m-2">
      <%= f.label :password, "Nova Senha" %><br />
      <% if @minimum_password_length %>
      <em>( mÃ­nimo <%= @minimum_password_length %> caracteres)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="field m-2">
      <%= f.label :password_confirmation, "Confirmar nova senha" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions text-center m-4">
      <%= f.submit "Change my password" %>
    </div>
  <% end %>
  <div class="empty-div" style="height: 200px;">

  </div>
</div>

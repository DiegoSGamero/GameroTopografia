<div class="container user-profile">
  <div class="card-profile">
    <div class="user-name mb-3">
      <h1 class="text-center" style="color: #1c301e;"><%= @user.full_name.split.map(&:capitalize).join(' ') %></h1>
    </div>
    <div class="user-infos">
      <p class="profile-item">Endere√ßo: <%= @user.address %></p>
      <% if @user.fantasy_name.present? %>
        <p class="profile-item">Nome Fantasia: <%= @user.fantasy_name %></p>
      <% end %>
      <% if @user.CNPJ.present? %>
        <p class="profile-item">CNPJ: <%= @user.CNPJ %></p>
      <% end %>
      <p class="profile-item">CPF: <%= @user.CPF %></p>
      <p class="profile-item">RG: <%= @user.RG %></p>
      <p class="profile-item">Telefone: <%= @user.phone_number %></p>
      <p class="profile-item">Categoria: <%= @user.role %></p>
      <p class="profile-item">Email: <%= @user.email %></p>
    </div>
  </div>
  <div class="card-attachments d-flex row p-2 mb-4">
    <h5 class="text-center mb-4" style="color: #1c301e;"> Anexos </h5>
    <% if @photos.present? %>
      <% @photos.each do |photo| %>
        <div class="col-sm-6 col-md-2 m-2">
          <%= link_to(cl_image_tag(photo.key, transformation: [{ width: 120, height: 120, gravity: "auto", crop: "fill", fetch_format: "auto" }], class: "attachment"), rails_blob_path(photo.blob, disposition: "attachment"), target: "_blank") %>
        </div>
      <% end %>
  </div>
    <% else %>
      <div class="no-attachments text-center my-2">
        <p>Ainda sem nenhum anexo <i style="color: #1c301e;" class="fa-solid fa-face-sad-tear"></i></p>
      </div>
    <% end %>
  </div>
</div>
